<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient android:startColor="@color/colorGray"
                android:centerColor="@color/colorGray"
                android:endColor="@color/colorGray"
                android:centerY="0.75"
                android:angle="270" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient android:startColor="@color/colorRed"
                    android:centerColor="@color/colorRed"
                    android:endColor="@color/colorRed"
                    android:centerY="0.75"
                    android:angle="270" />
                <stroke android:width="3dp" android:color="@color/colorRed" />
            </shape>
        </clip>
    </item>
</layer-list>
