<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contents.ContentsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:padding="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/videoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="30dp"
                    android:text="영상"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
                <!--android:onClick="onClickedVideoButton"-->

                <Button
                    android:id="@+id/newsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="뉴스"
                    android:textColor="@color/colorGray"
                    android:textSize="24sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
                <!--android:onClick="onClickedNewsButton"-->

                <Button
                    android:id="@+id/productBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="30dp"
                    android:text="제품"
                    android:textColor="@color/colorGray"
                    android:textSize="24sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />

                <View
                    android:id="@+id/videoBar"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorGray" />
                <!--android:onClick="onClickedProductButton"-->
                <View
                    android:id="@+id/newsBar"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/colorGray" />
                <View
                    android:id="@+id/productBar"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorRed" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hashtag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:text="# 많이걸은날"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/hashtag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="120dp"
                    android:text="# 홈트레이닝"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/hashtag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="240dp"
                    android:text="# 피로회복"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="110dp"
                android:background="@drawable/border2">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginHorizontal="10dp"/>
                </ScrollView>
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>