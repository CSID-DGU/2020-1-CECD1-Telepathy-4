<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contents.NewsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:padding="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/videoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="30dp"
                    android:text="영상"
                    android:textColor="@color/colorGray"
                    android:textSize="24sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
                <!--android:onClick="onClickedVideoButton"-->

                <Button
                    android:id="@+id/newsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="뉴스"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
                <!--android:onClick="onClickedNewsButton"-->

                <Button
                    android:id="@+id/productBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="30dp"
                    android:text="제품"
                    android:textColor="@color/colorGray"
                    android:textSize="24sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />

                <View
                    android:id="@+id/videoBar"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorGray" />
                <View
                    android:id="@+id/newsBar"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorRed" />
                <!--android:onClick="onClickedProductButton"-->
                <View
                    android:id="@+id/productBar"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/colorGray" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hashtag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:text="#"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/hashtag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="120dp"
                    android:text="#"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/hashtag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="240dp"
                    android:text="#"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/news"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/border2">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/thumbnail1"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="110dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sentence1"
                        android:layout_width="210dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="35dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="110dp"
                        android:background="@color/colorGray" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginTop="135dp">

                    <ImageView
                        android:id="@+id/thumbnail2"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="0dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sentence2"
                        android:layout_width="210dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="35dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="110dp"
                        android:background="@color/colorGray" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginTop="260dp">

                    <ImageView
                        android:id="@+id/thumbnail3"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="0dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sentence3"
                        android:layout_width="210dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="35dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="110dp"
                        android:background="@color/colorGray" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginTop="385dp">

                    <ImageView
                        android:id="@+id/thumbnail4"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="0dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sentence4"
                        android:layout_width="210dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="35dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="110dp"
                        android:background="@color/colorGray" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginTop="510dp">

                    <ImageView
                        android:id="@+id/thumbnail5"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="0dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sentence5"
                        android:layout_width="210dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="35dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="110dp"
                        android:background="@color/colorGray" />
                </FrameLayout>
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>